<div class="login-container">

<h2 class="login-header">Admin Login</h2>
<% if @errors %>
          <%= @errors.inspect %>
        <% end %>
<%= form_with(url: login_path, scope: :session, local: true) do |form| %>
    <div class="form-group clearFix">
        <%= form.label :email, class: "required title" %>
        <%= form.email_field :email, class: 'login-data' %>
        <% if @errors %>
        <%= @errors.inspect %>
        <% end %>
    </div>
    <div class="form-group clearFix">
        <%= form.label :password, class: "title" %>
        <%= form.password_field :password, class: 'login-data' %>
    </div>
    <div class="submit-btn">
        <button class="login-btn" type="submit">Log In</button>
    </div>
<% end %>
</div>
